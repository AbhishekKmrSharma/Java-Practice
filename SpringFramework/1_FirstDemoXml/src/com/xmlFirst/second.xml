<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns:p="http://www.springframework.org/schema/p"
   xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

<bean id = "emp" class = "com.second.Employee">

  <property name="age" value = "27"></property>
  <property name="name" value = "Abhishek Sharma"></property>
  <property name="Salary" value = "44000"></property>
  <property name="add" ref="add"></property>
    
</bean>

<bean id = "add" class = "com.second.Address">

  <property name="city" value = "Pathankot"></property>
  <property name="state" value = "Punjab"></property>
  <property name="pinCode" value = "145001"></property>

</bean>

</beans>