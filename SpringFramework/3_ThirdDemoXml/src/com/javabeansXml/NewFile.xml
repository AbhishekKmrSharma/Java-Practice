<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns:p="http://www.springframework.org/schema/p"
   xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

<bean id = "emp" class = "com.javabeansclasses.Employee">

  <property name = "name" value = "Abhishek Sharma"></property>
  <property name = "age" value = "27"></property>
  <property name="address" ref = "addr"></property>

</bean>

<bean id = "addr" class = "com.javabeansclasses.Address">

  <property name="city" value = "Pathankot"></property>
  <property name="pinCode" value = "145001"></property>

</bean>




</beans>